{
  "name": "api",
  "version": "1.0.0",
  "description": "Basic Node API using TypeScript.",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "nodemon ./dist/index.js",
    "debug": "nodemon --inspect ./src/index.ts",
    "dev": "ts-node ./src/index.ts",
    "prod": "npm run build && npm run start"
  },
  "author": "David Martinez",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.5.19",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.7.3",
    "nodemon": "^1.19.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
